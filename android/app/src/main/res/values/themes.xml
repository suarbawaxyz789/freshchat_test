<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="freshchat_message_list_reply_view_divider">@android:color/transparent</color>

    <style name="MyCustomTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/fcRed</item>
        <item name="android:colorBackground">@color/fcBlue</item>
        <!--        <item name="android:textColorHighlight">@color/textColorHighlight</item>-->
        <!--        <item name="android:textColorHint">@color/textColorHint</item>-->
        <!--        <item name="android:textColorLink">@color/textColorLink</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CustomChannelNameTextStyle" parent="Widget.Freshchat.ChannelName">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/freshchat_channel_name_max_lines</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textDirection">firstStrong</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="CustomMessageList" parent="Widget.Freshchat.MessageList">
        <!--        <item name="android:background">@drawable/freshchat_message_list_bg</item>-->
        <item name="android:background">@color/fcBackground</item>
        <item name="stackFromEnd">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
    </style>

    <style name="MessageListItemCustom" parent="Widget.Freshchat.MessageListItem">
        <item name="android:background">@color/freshchat_message_list_item_bg</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="CustomUserMessage" parent="Widget.Freshchat.UserMessage">
        <item name="android:textAppearance">@style/MyCustomTextAppearance</item>
        <item name="android:textColor">@color/fcWhite</item>
        <item name="android:textColorLink">@color/fcLinkColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomTeamMemberMessage" parent="Widget.Freshchat.TeamMemberMessage">
        <item name="android:textAppearance">@style/MyCustomTextAppearance</item>
        <item name="android:textColor">@color/fcWhite</item>
        <item name="android:textColorLink">@color/fcLinkColor</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="CustomConversationBannerMessage" parent="Widget.Freshchat.ConversationBannerMessage">
        <item name="android:background">@color/fcWhite</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Medium</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textDirection">firstStrong</item>
    </style>

    <style name="CustomChipTextViewStyle" parent="Widget.Freshchat.ChipTextViewStyle">
        <item name="android:textColor">@color/fcYellow</item>
    </style>

    <style name="CustomTeamMemberAvatarView" parent="Widget.Freshchat.TeamMemberAvatarView">
        <item name="android:visibility">gone</item>
        <item name="android:layout_height">@dimen/freshchat_message_avatar_icon_size</item>
        <item name="android:layout_width">@dimen/freshchat_message_avatar_icon_size</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="CustomMessageReplyEditText" parent="Widget.Freshchat.MessageReplyEditText">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:hint">Ask anything...</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/freshchat_text_view_default_margin_left</item>
        <item name="android:layout_marginStart">@dimen/freshchat_text_view_default_margin_left
        </item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:maxLines">4</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textColor">@color/fcWhite</item>
        <item name="android:textColorHint">@color/fcWhite2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textDirection">firstStrong</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="CustomMessageReplyView" parent="Widget.Freshchat.MessageReplyView">
        <item name="android:background">@drawable/rounded_top_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:elevation">5dp</item>
        <item name="android:minHeight">@dimen/freshchat_message_reply_frame_min_height</item>
    </style>

    <style name="CustomUserMessageTime" parent="Widget.Freshchat.UserMessageTime">
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Small</item>
        <item name="android:textColor">@color/fcWhite</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="CustomTeamMemberMessageTime" parent="Widget.Freshchat.TeamMemberMessageTime">
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Small</item>
        <item name="android:textColor">@color/fcWhite2</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="CustomChannelDescription" parent="Widget.Freshchat.ChannelDescription">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/freshchat_channel_desc_max_lines</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/fcWhite2</item>
        <item name="android:textDirection">firstStrong</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="CustomChannelLastUpdatedAt" parent="Widget.Freshchat.ChannelLastUpdatedAt">
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Small</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/fcWhite2</item>
        <item name="android:textDirection">firstStrong</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="CustomChannelListItem" parent="Widget.Freshchat.ChannelListItem">
        <item name="android:background">@drawable/rounded_listile</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CustomChannelList" parent="Widget.Freshchat.ChannelList">
        <item name="android:background">@null</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CustomFAQListItem" parent="Widget.Freshchat.FAQListItem">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/fcWhite2</item>
        <item name="android:textDirection">firstStrong</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="MyCustomTheme" parent="Theme.Freshchat.Light.DarkActionBar">
        <item name="freshchatFAQListItemStyle">@style/CustomFAQListItem</item>
        <item name="freshchatChannelListStyle">@style/CustomChannelList</item>
        <item name="freshchatChannelDescriptionTextStyle">@style/CustomChannelDescription</item>
        <item name="freshchatChannelListItemStyle">@style/CustomChannelListItem</item>
        <item name="freshchatChannelLastUpdatedAtTextStyle">@style/CustomChannelLastUpdatedAt</item>
        <item name="freshchatChannelListEmptyTextStyle">@style/CustomChannelDescription</item>

        <item name="freshchatTeamMemberMessageTimeTextStyle">@style/CustomTeamMemberMessageTime
        </item>
        <item name="freshchatUserMessageTimeTextStyle">@style/CustomUserMessageTime</item>
        <item name="freshchatMessageReplyViewStyle">@style/CustomMessageReplyView</item>
        <item name="freshchatMessageReplyInputViewStyle">@style/CustomMessageReplyEditText</item>
        <item name="freshchatTeamMemberAvatarStyle">@style/CustomTeamMemberAvatarView</item>
        <item name="freshchatChannelNameTextStyle">@style/CustomChannelNameTextStyle</item>
        <item name="freshchatUserMessageTextStyle">@style/CustomUserMessage</item>
        <item name="freshchatTeamMemberMessageTextStyle">@style/CustomTeamMemberMessage</item>
        <item name="freshchatMessageListStyle">@style/CustomMessageList</item>
        <item name="freshchatMessageListItemStyle">@style/MessageListItemCustom</item>
        <item name="freshchatConversationBannerMessageStyle">
            @style/CustomConversationBannerMessage
        </item>
        <item name="freshchatChipViewTextViewStyle">@style/CustomChipTextViewStyle</item>
        <item name="android:windowBackground">@color/fcBackground</item>
        <item name="freshchatChatBubbleLeft">@drawable/freshchat_chat_bubble_left_2</item>
        <item name="freshchatChatBubbleRight">@drawable/freshchat_chat_bubble_right_2</item>
        <item name="freshchatSendIcon">@drawable/send_icon</item>
        <item name="freshchatAttachIcon">@drawable/attachment_icon</item>
    </style>

    <style name="Theme.Freshchat.SelectedTheme" parent="MyCustomTheme" />
</resources>